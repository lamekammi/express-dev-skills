<!DOCTYPE html>
<html>
  <head>
    <title>Express Dev Skills</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
<body>
  <div>
    <h1>Skills</h1>
    <ul>
      <% skills.forEach(function(skill) { %>
        <li>
            <a href="/skills/<%= skill.id %>"><%= skill.skill %></a>
            <form action="/skills/<%= skill.id %>?_method=DELETE"
              class="delete-form" method="POST">
              <button type="submit">❌</button>
            </form>
        </li>
      <% }); %>
    </ul>
    <br />
    <p>🍡 <a href="/">Home Page</a> ||
    <a href="/skills/new">Add Skill</a> 🍡</p>
    </div>
  </body>
</html>